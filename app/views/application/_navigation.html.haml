%nav.navbar.navbar-default(role="navigation")
  .container
    .navbar-header
      %button.navbar-toggle(type="button" data-toggle="collapse" data-target="#nav-collapse")
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand(href="/") Магазин
    #nav-collapse.collapse.navbar-collapse
      - if signed_in?
        %ul.nav.navbar-nav
          %li(ng-class="{active: state.current.data.feature == 'items'}")
            %a(ui-sref="items.list")
              Товары и категории
      - if signed_in?
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-expanded="false")
              = current_user.email
              %span.caret
            %ul.dropdown-menu
              %li= link_to "Выйти", destroy_user_session_path, method: :delete
      - else
        %ul.nav.navbar-nav.navbar-right
          %li= link_to "Войти", new_user_session_path
